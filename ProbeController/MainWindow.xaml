<Window x:Class="ProbeController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProbeController"
        mc:Ignorable="d"
        Title="Probe Main Controller" Height="600" Width="1200" MinHeight="600" MinWidth="1200" MaxHeight="600" MaxWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Frame Panel: StartStream, EndStream, Blur, Canny...-->
        <StackPanel Margin="15,10,15,80.4" Orientation="Horizontal" Grid.Column="">
            <Image x:Name="frame" HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="640"/>
            <StackPanel x:Name="buttonFrame" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" MinWidth="100" Orientation="Vertical" Margin="10,0,0,0">
                <Button x:Name="startStreamButton" Content="Start Stream" Click="onStartStreamButton" Margin="4" MinHeight="40" />
                <Button x:Name="endStreamButton" Content="End Stream" Click="onEndStreamButton" Margin="4" MinHeight="40"/>
                <Button x:Name="gblurButton" Content="Blur " Click="onGaussianBlurButton" Margin="4" MinHeight="40"/>
                <Button x:Name="cannyButton" Content="Canny" Click="onCannyButton" Margin="4" MinHeight="40"/>
            </StackPanel>
        </StackPanel>

        <!-- Control Panel -->
        <GroupBox x:Name="groupBox" Header="Robot Control Panel" Height="414" Width="Auto" Margin="12,10,60,0" VerticalAlignment="Top" Grid.Column="1">
            <!-- Groupbox Contents... In this groupbox, contents are organized using StackPanel-->
            <StackPanel Width="Auto" Height="Auto" Orientation="Vertical" Margin="5,5,5,0" VerticalAlignment="Top" >
                <!-- IP Address, Port, 2 TextBox, Connect, Disconnect -->
                <StackPanel Width="Auto" Orientation="Horizontal" Height="Auto">
                    <StackPanel HorizontalAlignment="Left" Orientation="Vertical"  Margin="0,5,0,0" VerticalAlignment="Top" Width="Auto" Height="Auto">
                        <StackPanel Height="Auto" Orientation="Horizontal" HorizontalAlignment="Center" Margin="4">
                            <Label x:Name="ipLabel" Content="IP Address"  MinWidth= "70" Height="Auto" VerticalAlignment="Top"/>
                            <TextBox x:Name="ipTextBox" TextWrapping="NoWrap" MinWidth="120" MaxWidth="120" MinHeight="30" MaxHeight="30"  />
                        </StackPanel>
                        <StackPanel Height="Auto" Orientation="Horizontal" HorizontalAlignment="Center" Margin="4">
                            <Label x:Name="portLabel" Content="Port"  MinWidth= "70" Height="Auto" Margin="0,0,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="portTextBox" TextWrapping="NoWrap" MinWidth="120" MaxWidth="120" MinHeight="30" MaxHeight="30"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Left"  Margin="0,5,0,0" VerticalAlignment="Top" Width="Auto" Height="Auto">
                        <Button x:Name="connectButton" Content="Connect" Click="onConnectionButton" MinHeight="30" MinWidth="100" Margin="4"/>
                        <Button x:Name="disconnectButton" Content="Disconnect" Click="onDisconnectButton" MinHeight="30" MinWidth="100" Margin="4"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </GroupBox>

    </Grid>

</Window>
